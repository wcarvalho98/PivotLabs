<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_prof_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground">

        <TextView
                android:text="@string/profissional"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/tvProfessionalName"
                app:layout_constraintBottom_toTopOf="@+id/tvSpeciality" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/tvDayPeriod"
                app:layout_constraintTop_toTopOf="parent"
                android:singleLine="true" android:textColor="@color/colorPrimary"
                android:textStyle="bold"/>
        <TextView
                android:text="@string/profissional"
                android:layout_width="90dp"
                android:layout_height="wrap_content" android:id="@+id/tvDayPeriod"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tvProfessionalName" android:layout_marginStart="8dp"
                android:textSize="14sp" android:singleLine="true" android:textColor="@color/colorPrimaryLight"
                app:layout_constraintTop_toTopOf="@+id/tvProfessionalName" android:textAlignment="textEnd"
                android:textStyle="bold|italic" android:textAllCaps="false"
                android:paddingRight="2dp"/>
        <TextView
                android:text="@string/profissional"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/tvSpeciality"
                app:layout_constraintTop_toBottomOf="@+id/tvProfessionalName"
                app:layout_constraintStart_toStartOf="@+id/tvProfessionalName"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textSize="18sp" android:layout_marginBottom="8dp" android:textAllCaps="false"
                android:singleLine="true" android:textColor="@color/colorSecondaryDark"
                app:layout_constraintEnd_toEndOf="@+id/tvDayPeriod" android:layout_marginEnd="8dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>